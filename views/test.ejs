<div class="form-group row">
	<div class="col-md-2">
		<!-- <label for="petLives" class="control-label">Pet Lives</label> -->
		<select class="form-control" id="phone" name="phone">
			<option value="#">phone</option>
			<option value="mobile">mobile</option>
			<option value="home">home</option>
			<option value="work">work</option>
		</select>
	</div>

	<div class="col-md-2">
		<input type="text" class="form-control hidden" id="mobile" placeholder="mobile">
		<input type="text" class="form-control hidden" id="home" placeholder="home">
		<input type="text" class="form-control hidden" id="work" placeholder="work">
	</div>
</div>



