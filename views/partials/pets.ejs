			<div class="col-md-4">
				<input type="text" class="form-control" id="petNotes" name="petNotes" placeholder="notes">
			</div>
			<div class="col-md-2">
				<!-- <input type="button" class="btn btn-outline-success addPet" value="+"> -->
				<span><input type="button" class="btn btn-outline-danger deletePet" value="-"></span>
			</div>
		</div> <!-- /hidden template -->
	</div>

	<div class="add-row-pet">
		<!-- inputs dynamically rendered here; pets.js copies from hidden template above -->
	</div>

	<!-- hidden field to hold multiple values to be entered into database array -->
	<input type="hidden" name="pets" id='pets[]' >

